<% provide(:title, @user.name) %>

<div class="row user_frame">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avater.attached? %>
          <%= image_tag @user.avater.variant(resize_to_fill: [100, 100]), class: "user_avater" %>
        <% else %>
          <%= image_tag "default.png", class: "default_avater" %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="scroll-nav">
  <ul>
    <li><%= link_to "プロフィール編集", href="#" %></li>
    <li><%= link_to "過去の投稿", href="#" %></li>
    <li><%= link_to icon("fas", "thumbtack", "ピンした投稿"), href="#" %></li>
  </ul>
</div>
